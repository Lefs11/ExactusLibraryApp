@model ExactusLibraryApp.Models.Book
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Book</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author">Author</label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Owner">Owner</label>
            <input asp-for="Owner" class="form-control" />
            <span asp-validation-for="Owner" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CheckedOutBy">Checked Out By</label>
            <input asp-for="CheckedOutBy" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CheckedOutDate">Checked Out Date</label>
            <input asp-for="CheckedOutDate" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="StatusId">Status</label>
            @*<input asp-for="Title" class="form-control" />*@
            <select asp-for="StatusId" asp-items="Model.StatusList" class="form-control">
                <option value=""> -- Select -- </option>
            </select>
            <span asp-validation-for="StatusId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TypeId">Type</label>
            <select asp-for="TypeId" asp-items="Model.TypeList" class="form-control">
                <option value=""> -- Select -- </option>
            </select>
            <span asp-validation-for="TypeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LocationId">Location</label>
            <select asp-for="LocationId" asp-items="Model.LocationList" class="form-control">
                <option value=""> -- Select -- </option>
            </select>
            <span asp-validation-for="LocationId" class="text-danger"></span>
        </div>
        @*<div class="mb-3">
            <label asp-for="Owner">Comments</label>
            <input asp-for="Owner" class="form-control" />
            <span asp-validation-for="Owner" class="text-danger"></span>
        </div>*@
        

        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Book" asp-action="GetAllBooks" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}