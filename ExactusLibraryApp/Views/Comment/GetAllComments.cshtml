@model IEnumerable<ExactusLibraryApp.Models.Comment>
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Comments</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Comment" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Comment
            </a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th> User </th>
                <th> Date </th>
                <th> Comment </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Username
                    </td>
                    <td>
                        @obj.Date
                    </td>
                    <td>
                        @obj.Comments
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Comment" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />
    <div class="row pt-4">
        <div class="col-6">
            <a asp-controller="Book" asp-action="GetAllBooks" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </div>
    
</div>